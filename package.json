{
  "name": "cloudydesktop",
  "version": "1.0.0",
  "description": "Mirror local folder to a Cloudinary folder",
  "main": "main.js",
  "scripts": {
    "test": "electron .",
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cloudinary-labs/cloudydesktop.git"
  },
  "keywords": [
    "cloudinary",
    "desktop"
  ],
  "author": "Hadar",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/cloudinary-labs/cloudydesktop/issues"
  },
  "homepage": "https://github.com/cloudinary-labs/cloudydesktop#readme",
  "dependencies": {
    "chokidar": "^3.4.0",
    "electron-squirrel-startup": "^1.0.0",
    "electron-store": "^5.2.0",
    "keytar": "^6.0.1"
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.52",
    "@electron-forge/maker-deb": "^6.0.0-beta.52",
    "@electron-forge/maker-rpm": "^6.0.0-beta.52",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.52",
    "@electron-forge/maker-zip": "^6.0.0-beta.52",
    "electron": "^9.0.5"
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "icon": "/Users/hadar/Dev/electron/fly/images/macos-icon-round.icns"
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "cloudydesktop"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  }
}
